<subsystem_definition>

    <buffers>
        <in alias="st"      type="velma_core_cs_task_cs_msgs::Status"     side="bottom"/>
        <out alias="cmd"    type="velma_core_cs_task_cs_msgs::Command"    side="bottom"/>
    </buffers>

    <trigger_methods>
<!--        <period value="0.01"/>-->

        <read_buffers min_period="0.01" first_timeout="0.02" next_timeout="0.02" first_timeout_sim="1.0" >
            <obligatory name="st" />
        </read_buffers>

    </trigger_methods>

    <predicates>
    </predicates>

    <behaviors>
        <behavior name="normal"
            stop_cond="FALSE"
            err_cond="FALSE" >
            <running_component name="Y" />
        </behavior>
    </behaviors>

    <states initial="normal">
        <state name="normal">
            <behavior name="normal" />
        </state>
    </states>

    <simulation use_ros_sim_clock="true" use_sim_clock="true" />

</subsystem_definition>
