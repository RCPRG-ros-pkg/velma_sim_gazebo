<subsystem_definition>

    <buffers>
        <out alias="rLwr_st" type="velma_core_ve_re_lwr_msgs::Status"   side="top" />
        <in alias="rLwr_cmd" type="velma_core_ve_re_lwr_msgs::Command"  side="top" />
        <out alias="lLwr_st" type="velma_core_ve_re_lwr_msgs::Status"   side="top" />
        <in alias="lLwr_cmd" type="velma_core_ve_re_lwr_msgs::Command"  side="top" />
        <out alias="ec_st"   type="test_ec_msgs_gen::EcInput"           side="top"  converter="test_ec_msgs_gen::EcInputBufferConverter"/>
        <in alias="ec_cmd"   type="test_ec_msgs_gen::EcOutput"          side="top"  converter="test_ec_msgs_gen::EcOutputBufferConverter"/>
    </buffers>

    <trigger_methods>
<!--      <period value="0.001" />-->
        <new_data_on_buffer name="ec_cmd" min="0.001" />
        <no_data_on_buffer name="ec_cmd" first_timeout="0.0012" next_timeout="0.001" first_timeout_sim="1.0" />
    </trigger_methods>

    <predicates>
    </predicates>

    <behaviors>
        <behavior name="normal"
            stop_cond="FALSE"
            err_cond="FALSE" >
            <running_component name="Y" />
        </behavior>
    </behaviors>

    <states initial="normal">
        <state name="normal">
            <behavior name="normal" />
        </state>
    </states>

    <simulation use_ros_sim_clock="false" use_sim_clock="false" trigger_gazebo="true" />

</subsystem_definition>
